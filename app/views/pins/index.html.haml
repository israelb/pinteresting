#pins.transitions-enabled
  - @pins.each do |pin|
    .box.panel.panel-default
      = link_to image_tag(pin.image.url(:thumb)), pin
      .panel-body
        = pin.description
        %b
          = pin.user.try(:email)
      
        - if pin.user == current_user
          .actions
            = link_to 'Edit', edit_pin_path(pin)
            = link_to 'Destroy', pin, :method => :delete, :data => { :confirm => "Are you sure you want to delete? #{pin.description}" }

