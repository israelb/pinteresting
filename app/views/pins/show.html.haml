= link_to 'Back', pins_path

.row
  .col-md-offset-2.col-md-8
    .panel.panel-default
      .panel-heading.center
        = image_tag @pin.image.url(:medium)
      .panel-body
        %p
          = @pin.description
        %p 
          = @pin.user.try(:email)
        = link_to edit_pin_path(@pin) do
          %i.glyphicon.glyphicon-edit Edit                


